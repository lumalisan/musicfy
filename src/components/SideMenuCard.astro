---
import type { Playlist } from "@/lib/data";

interface Props {
    playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, artists, cover, title } = playlist;

const artistsString = artists.join(", ");
---

<a
    href={`/playlist/${id}`}
    class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-accent/10 transition duration-300"
>
    <picture class="h-12 w-12 flex-none">
        <img
            src={cover}
            alt={`Cover image for the album ${title} by ${artistsString}`}
            class="object-cover w-full h-full rounded-md"
        />
    </picture>
    <div class="flex flex-col flex-auto truncate">
        <h4 class="text-accent font-medium text-base">
            {title}
        </h4>
        <span class="text-accent/70 text-sm">
            {artistsString}
        </span>
    </div>
</a>
