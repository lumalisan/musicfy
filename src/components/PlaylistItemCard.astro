---
import type { Playlist } from '@/lib/data';
import PlayButton from './PlayButton';

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, artists } = playlist;

const artistsString = artists.join(', ');
---

<article
  class='group relative hover:bg-secondary shadow-lg hover:shadow-xl bg-secondary/30 rounded-md ransi transition-all duration-300'
>
  <div class='absolute right-4 bottom-20 transition duration-300 opacity-0 group-hover:-translate-y-3 group-hover:opacity-100 z-10'>
    <PlayButton id={id} size='base' client:visible transition:name="play-button" />
  </div>

  <a
    href={`/playlist/${id}`}
    class='playlist-item transition-all duration-300 flex relative p-2 overflow-hidden gap-2 pb-6 rounded-md w-44 flex-col'
    transition:name=`playlist ${id} box`
  >
    <picture class='aspect-square w-full h-auto flex-none'>
      <img
        src={cover}
        alt={`Cover of ${title} by ${artistsString}`}
        class='object-cover w-full h-full rounded-md'
        transition:name=`playlist ${id} image`
      />
    </picture>

    <div class='flex flex-auto flex-col px-2 text-accent'>
      <h4 class='text-sm' transition:name=`playlist ${id} title`>
        {title}
      </h4>

      <span
        class='text-xs opacity-70'
        transition:name=`playlist ${id} artists`
      >
        {artistsString}
      </span>
    </div>
  </a>
</article>
