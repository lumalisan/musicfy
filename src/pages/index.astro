---
import { playlists } from "@/lib/data";
import Layout from "@/layouts/Layout.astro";
import PlaylistItemCard from "@/components/PlaylistItemCard.astro";
import Greetings from "@/components/Greetings";
---

<Layout title="Musicfy">
	<div
		id="playlist-container"
		class="relative transition-all duration-1000 bg-accent"
	>
		<div class="relative z-10 px-6 pt-10">

			<Greetings />

			<div class="flex flex-wrap mt-6 gap-6">
				{
					playlists.map((playlist) => (
						<PlaylistItemCard playlist={playlist} />
					))
				}
			</div>

			<div
				class="absolute inset-0 bg-gradient-to-t from-primary via-primary/80 -z-[1]"
			>
			</div>
		</div>
	</div>
</Layout>

